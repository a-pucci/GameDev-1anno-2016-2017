      <command>wait 1</command>
      <command>text "Pas mal. Maintenant, vous avez un look beaucoup plus agressif."</command>
      <command>bitmap -"me" "dragone_metal_l"</command>
      <command>text -"me" "Je dois admettre que je suis vraiment emballé."</command>
      <command>text "Vous pensez que vous pouvez me chanter un morceau de métal maintenant ?"</command>
      <command>text -"me" "Quel morceau voulez-vous entendre ?"</command>
      <command>internal -g 2</command>
      <command>throw "starter_kit_metallaro"</command>
      <command>dialog "scelta_pezzo"</command>
    </hotspot>
  </location>
  <location name="camera_letto">
    <hotspot ID="parrucca">
      <command>text "Celui du metalleux est beaucoup mieux." $171</command>
    </hotspot>
  </location>
