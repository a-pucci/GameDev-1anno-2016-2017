<object name="bagnoschiuma">
  <description>
    <command>text "Il flacone non è il massimo della mascolinità, ma devo ammettere che ha proprio un buon profumo."</command>
  </description>
  <inventory />
  <location name="primo_piano">
    <hotspot ID="toppa">
      <command>pose d</command>
      <command>expression "sarcastic"</command>
      <command>text "É un po' troppo grande per farlo passare dalla toppa."</command>
    </hotspot>
    <hotspot ID="porta del bagno">
      <command>hide -"toppa"</command>
      <command>hide -"porta del bagno"</command>
      <command>show -"primo_piano_x_bagno"</command>
      <command>text "Per caso ti serve dell'altro bagnoschiuma? Ne ho qui con me un flacone."</command>
      <command>wait 1</command>
      <command>text (1290,330) -c=lblue "Va bene, entra pure."</command>
      <command>wait 0,5</command>
      <command>status 0</command>
      <command>sound "door_open"</command>
      <command>goto "bagno"</command>
    </hotspot>
  </location>
  <location name="accampamento">
    <hotspot ID="vecchia conoscenza">
      <command>text "Beh, in effetti un bagno non guasterebbe." $21</command>
    </hotspot>
  </location>
  <location name="catacomba">
    <hotspot ID="non_sapevo_come_chiamarlo">
      <command>text "Temo che non basterebbe a disincastrarlo dal suo loculo." $22</command>
    </hotspot>
    <hotspot ID="zombie">
      <command>pose d</command>
      <command>text "Meglio di no, sarebbe scortese." $23</command>
    </hotspot>
  </location>
</object>