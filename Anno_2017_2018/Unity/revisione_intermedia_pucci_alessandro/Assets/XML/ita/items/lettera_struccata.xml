<object name="lettera 'struccata'">
  <description>
    <command>sound "use_volantino"</command>
    <command>document "lettera_struccata"</command>
    <command>sound "use_volantino"</command>
  </description>
  <inventory />
  <location name="sala_vikingi_egizi">
    <hotspot ID="faraonessa">
      <command>pause -"me"</command>
      <command>bitmap -"me" "faraonessa_l"</command>
      <command>text "Ho una lettera da parte del Signor '...'"</command>
      <command>animation -skinny 00 -o=185,13 -a "skinny_lettera"</command>
      <command>wait 1,4</command>
      <command>animation -"me" 00 -o=22,13 -c "faraonessa_legge_lettera"</command>
      <command>bitmap -"me" "faraonessa_lettera"</command>
      <command>throw "lettera_struccata"</command>
      <command>wait 1</command>
      <command>wait 1</command>
      <command>wait 1</command>
      <command>animation -"me" 00 -o=22,13 -c "faraonessa_lettera_back"</command>
      <command>bitmap -"me" "faraonessa_felice"</command>
      <command>wait 0,5</command>
      <command>text -"me" "Che dolce batuffolo di bende..."</command>
      <command>wait 1</command>
      <command>bitmap -"me" "faraonessa_l"</command>
      <command>wait 0,5</command>
      <command>text -"me" "Sì, penso che accetterò la sua proposta."</command>
      <command>wait 1</command>
      <command>text -"me" "Saltiamo pure i convenevoli dell'anello di fidanzamento, non ho tempo da perdere."</command>
      <command>wait 0,5</command>
      <command>text -"me" "Hai portato le fedi nuziali?"</command>
      <command>bitmap -"me" "faraonessa"</command>
      <command>internal -"me" -g 1</command>
      <command>resume -"me"</command>
    </hotspot>
  </location>
</object>