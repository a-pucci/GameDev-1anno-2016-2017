      <command>expression "sarcastic"</command>
      <command>text "La verdad es que creo que ya he hecho más que suficiente."</command>
      <command>expression "normal"</command>
      <command>expression -"me" "angry"</command>
      <command>text -"me" "Es una orden."</command>
      <command>wait 0,5</command>
      <command>expression -"me" ""</command>
      <command>text -"me" "La ceremonia se celebrará sobre el meteorito del lago Roswell."</command>
      <command>bitmap -"me" "faraonessa_felice"</command>
      <command>text -"me" "Qué romántico..."</command>
      <command>wait 1</command>
      <command>bitmap -"me" "faraonessa_l"</command>
      <command>text -"me" "Ahora ve, he de prepararme."</command>
      <command>internal -"cucina/Gesoo" -g 1</command>
      <command>bitmap -"me" "faraonessa"</command>
      <command>hide -nc -"me"</command>
      <command>resume -"me"</command>
      <command>fie</command>
      <command>pose d</command>
      <command>expression "sarcastic"</command>
      <command>text "Cásate TÚ con ella, si tanto te gusta." 8</command>
    </hotspot>
  </location>
  <location name="camera_letto">
    <hotspot ID="amante nascosto">
      <command>text "Le causarían lo mismo que a mí las ciruelas." $1</command>
    </hotspot>
  </location>
  <location name="cucina">
    <hotspot ID="Gesoo">
      <command>text "No creo que un mazado de instituto como él llegue a casarse." $2</command>
    </hotspot>
  </location>
